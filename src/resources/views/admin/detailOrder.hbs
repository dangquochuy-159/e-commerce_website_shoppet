<link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

<h1>DETAIL ORDER</h1>


<h3>{{order.name_customer}}</h3>
<h3>{{order.total_order}}</h3>
<h3>{{order.address}}</h3>
<h3>{{order.phone}}</h3>
{{#each customer}}
{{#if (compare this.customer_ID ../order.id_customer)}}
<h3>{{this.user_name }}</h3>

{{else}}
{{/if}}
{{/each}}

<h3>Chi tiết sản phẩm</h3>
{{this.quantity}}
{{this.product.name}}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Số lượng</th>
            <th scope="col">Đơn giá</th>
            <th scope="col">Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        {{#each order.details}}
        <tr>
            <th scope="row">{{sum @index 1}}</th>
            <td>{{this.product.name}}</td>
            <td>{{this.quantity}}</td>
            {{#if this.product.salePrice}}
            <td>{{this.product.salePrice}}</td>
            <td>{{multiplication this.product.salePrice this.quantity}}</td>
            {{else}}
            <td>{{this.product.price}}</td>
            <td>{{multiplication this.product.price this.quantity}}</td>
            {{/if}}
        </tr>
        {{/each}}

    </tbody>
</table>