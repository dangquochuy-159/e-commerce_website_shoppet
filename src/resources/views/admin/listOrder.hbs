<link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="/css/app.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

<style>

</style>


<div class="container-fluid ">
    <div class="row m-lr-0">
        <div class="col col-2 p-lr-0">
            {{> menuAdmin}}
        </div>
        <div class="col col-10 p-lr-0 dashboard">
            <div class="heading">
                <p>Danh sách đơn đặt hàng</p>
            </div>
            <div class="contain-table">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Ngày</th>
                            <th scope="col">Tên</th>
                            <th scope="col">Địa chỉ</th>
                            <th scope="col">Số điện thoại</th>
                            <th scope="col">Tổng tiền</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each order}}
                        <tr>
                            <th scope="row">{{this.order_ID}}</th>
                            <td>{{convertDate this.createdAt}}</td>
                            <td>{{this.name_customer}}</td>
                            <td>{{this.address}}</td>
                            <td>{{this.phone}}</td>
                            <td>{{convertPrice this.total_order}}</td>
                            <td class="text-center">
                                <button class="btn btn-primary btn-detail " type="submit"
                                    data-id="{{this.order_ID}}">Chi
                                    tiết</button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<form name="detail-order" method="GET"></form>

<script>
    let idCustomer
    const deleteForm = document.forms['detail-order']
    const btnDetailList = document.querySelectorAll('.btn-detail')

    Array.from(btnDetailList).forEach(function (btnItem) {
        btnItem.onclick = function () {
            console.log('click')
            idCustomer = this.getAttribute('data-id');
            deleteForm.action = '/chi-tiet/don-dat-hang/' + idCustomer
            deleteForm.submit()
        }
    })

</script>