<link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="/css/app.css">
<link rel="stylesheet" href="/icon/fontawesome-free-6.4.0-web/css/all.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>





<div class="login_register-form">
    <form class="form" method="POST" action="/admin/kiem-tra-dang-nhap" name="form-login">
        <h3>ĐĂNG NHẬP</h3>
        <div class="form-input">
            <div class="mb-3">
                <label for="user-name" class="form-label">Email</label>
                <input type="email" class="form-control" id="user-name" aria-describedby="emailHelp" name="user_name">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password">
                <i class="fa-regular fa-eye show-pass"></i>

            </div>
        </div>

        <div class="btn-list">
            <button type="submit" class="btn btn-primary btn-submit">Đăng Nhập</button>
        </div>
        <div class="back">
            <a href="/">
                Quay lại
                <i class="fa-solid fa-house"></i>
            </a>
        </div>
    </form>

</div>

<script>
    const formRegister = document.forms['form-login']
    const showPass = formRegister.querySelector('.show-pass')

    showPass.onclick = function () {
        let input = this.parentElement.querySelector('input')
        let type = input.type === 'password' ? 'text' : 'password'
        input.type = type
        this.classList.toggle('fa-eye');
        this.classList.toggle('fa-eye-slash');
    }

</script>