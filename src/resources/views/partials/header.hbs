<head>
    {{!-- bootstrap --}}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
</head>

<header class="container-fluid">
    <div class="header--search container">
        <div class="row">
            <div class="col col-3">
                <div class="logo">
                    <img src="/img/logo.png" alt="">
                </div>
            </div>
            <div class="col col-5">
                <div class="search">
                    <input type="text" placeholder="Tìm kiếm....">
                    <button>
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                </div>
            </div>
            <div class="col col-2">
                <div class="phone">
                    <div class="d-flex">
                        <i class="fa-solid fa-phone"></i>
                        <a href="tel:0900-1020-040">0900-1020-040</a>
                    </div>
                </div>
            </div>
            <div class="col col-2">
                <div class="account d-flex">
                    <div class="d-flex">
                        {{#if session.customerID}}
                        <a href="/dang-xuat" class="name-customer">Đăng xuất</a>
                        {{#if session.customerImage}}
                        <img src="{{session.customerImage}}" alt="">
                        {{else}}
                        <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" alt="">
                        {{/if}}
                        {{else}}
                        <a href="/dang-nhap" class="name-customer">
                            Đăng nhập
                        </a>
                        <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" alt="">
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <nav class="container-fluid header--nav d-flex">

        <ul class="container contain">
            <li>
                <a href="/"> Trang chủ</a>
            </li>
            <li>
                <a href="/gioi-thieu">Giới thiệu</a>
            </li>
            <li>
                <a href="/gio-hang">Giỏ hàng</a>
            </li>
            <li>
                <a href="/lien-he">Liên hệ </a>
            </li>
            <li>
                <a href="/tai-khoan">Tài khoản</a>
            </li>
        </ul>
    </nav>
</header>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>